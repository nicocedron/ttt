.ability
	width 100px
	height 100px
	border-radius 50%
	background #f1f1f1
	position absolute
	overflow hidden
	transform scale(0)
	transition transform 0.5s 0, left 0.5s 0,top 0.5s 0, opacity 1s
	transition-timing-function ease-in-out
	z-index 2


	img
		width 100%
		height 100%

	&.visible
		transform scale(1)

	for num in (1..16)
		_left = 10% * (num)
		_top  = 15%

		if(_left>=90)
			_top = 75% 
			_left= _left - 80

		&:nth-child({num})
			left _left
			top _top
			transition-delay (num * 0.1s)


