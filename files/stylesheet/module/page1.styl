.ability
	width 100px
	height 100px
	border-radius 50%
	background #f1f1f1
	position absolute
	overflow hidden
	transform scale(0)
	transition transform 0.5s 0, left 0.5s 0,top 0.5s 0, opacity 1s
	transition-timing-function ease-in-out
	z-index 2


	img
		width 100%
		height 100%

	&.visible
		transform scale(1)

	for num in (1..16)
		_left = 10% * (num)
		_top  = 15%

		if(_left>=90)
			_top = 75% 
			_left= _left - 80

		&:nth-child({num})
			left _left
			top _top
			transition-delay (num * 0.1s)


#page1
	position relative
	width 100%
	height 900px
	background url(../images/background1.jpg) repeat center center
	background-size cover

.circle
	border 5px solid rgba(255, 255, 255, 0.4)
	border-radius 50%
	width 400px
	height 400px
	position absolute
	left 50%
	top 50%
	margin-left -200px
	margin-top -200px
